{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUnusedLocals": true
  }
}
